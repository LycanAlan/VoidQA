{
	"info": {
		"_postman_id": "voidqa-questions-collection",
		"name": "VoidQA Questions API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Signup",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"testuser@example.com\",\n    \"password\": \"strongpassword123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/signup",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"signup"
							]
						}
					}
				},
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"testuser@example.com\",\n    \"password\": \"strongpassword123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/login",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"login"
							]
						}
					}
				}
			]
		},
		{
			"name": "Questions",
			"item": [
				{
					"name": "Create Question",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{authToken}}",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"How do I use React hooks?\",\n    \"body\": \"I'm struggling to understand the basics of React hooks. Can someone explain?\",\n    \"tags\": [\"react\", \"hooks\", \"javascript\"]\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/questions",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"questions"
							]
						}
					}
				},
				{
					"name": "List All Questions",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/api/questions",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"questions"
							]
						}
					}
				},
				{
					"name": "Search Questions",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/api/questions/search?query=react",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"questions",
								"search"
							],
							"query": [
								{
									"key": "query",
									"value": "react"
								}
							]
						}
					}
				},
				{
					"name": "Get Single Question",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/api/questions/{{questionId}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"questions",
								"{{questionId}}"
							]
						}
					}
				},
				{
					"name": "Add Answer to Question",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{authToken}}",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"body\": \"Here's a detailed explanation of React hooks...\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/questions/{{questionId}}/answers",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"questions",
								"{{questionId}}",
								"answers"
							]
						}
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:5000",
			"type": "string"
		},
		{
			"key": "authToken",
			"value": "",
			"type": "string"
		},
		{
			"key": "questionId",
			"value": "",
			"type": "string"
		}
	]
} 