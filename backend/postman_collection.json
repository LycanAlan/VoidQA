							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}",
								"description": "JWT token from login response"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"How to master React in 2024?\",\n    \"body\": \"I'm looking for the most efficient way to learn React and become a proficient developer. What resources and learning path would you recommend?\",\n    \"tags\": [\"react\", \"web-development\", \"learning\"]\n}"
						},
						"url": {
							"raw": "http://localhost:5000/api/questions",
							"protocol": "http",
							"host": ["localhost"],
							"port": "5000",
							"path": ["api", "questions"]
						},
						"description": "Successfully create a new question (requires authentication)"
					}
				},
				{
					"name": "Create Question - Missing Fields",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}",
